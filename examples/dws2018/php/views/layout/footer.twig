
{% include 'newsletter.twig' %}

<footer id="footer" class="layout-{{footerFormat}}">
       <div class="container">
            <div class="row font-small-footer">
              
                <div class="footer-col-1 col-10 col-md-3 offset-1 col-lg-3 offset-lg-0 links-inherit">
                    <div>
                        <a href="{{site.url}}" id="logo-footer">DWS</a>
                    </div>
                    {{options.adress_footer}}
                </div>

                <div class="footer-col-2 col-10 offset-1 col-md-3   col-lg-3 ">
                    <h3>{{__('Website')}}</h3>
                    {% for item in nav.footer_sitemap %}
                        <a class="no-style" href="{{item.url}}">{{item.title}}</a><br>
                    {% endfor %}
                </div>
                
                <div class="footer-col-3 col-10 offset-1 col-md-3 offset-md-0  col-lg-4 offset-lg-1">
                    <h3>{{__('Forms')}}</h3>
                    {% for item in nav.footer_forms %}
                        <a class="no-underline" href="{{item.url}}">{{item.title}}</a><br>
                    {% endfor %}
                </div>
                

            </div>
        </div> 
   
</footer>